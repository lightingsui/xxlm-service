<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">博客搜索</view>
</cu-custom>

<view class="cu-bar search bg-white">
  <view class="search-form round">
    <text class="cuIcon-search"></text>
    <input type="text" placeholder="搜索博客" confirm-type="search" bindinput="inputSearch"></input>
  </view>
  <view class="flex" >
      <button class="cu-btn bg-gradual-pink  margin-tb-sm round" bindtap="search" style="width:120rpx;margin-right:20rpx"> 
      搜索
      </button>
  </view>
</view>


<view class="box" wx:if="{{card}}">
  <view class="cu-card dynamic {{isCard?'no-card':''}}" wx:for="{{information}}">
    <view class="cu-item shadow">    

      <view class="cu-form-group"> 
        <text class="text-black text-bold infoTitle" selectable="true">{{item.title}}</text>
      </view>

      <view class="cu-form-group align-center"> 
        <text class="padding-top-sm padding-bottom-sm infoText" selectable="true">{{item.text}}</text>
      </view>

      <view class="cu-form-group align-center"> 
        <!-- <textarea maxlength="-1" bindinput="textInput" value="{{item.link}}" style="height:30rpx"></textarea> -->
        <text class="padding-top-sm padding-bottom-sm break-line" bindtap="clipboard" data-text="{{item.link}}" selectable="true">{{item.link}}</text>
      </view>

      <view class="cu-form-group"> 
        <view >{{item.author}}</view>
        <view class="text-gray text-df">{{item.date}}</view>
      </view>

    </view>
  </view>
</view>