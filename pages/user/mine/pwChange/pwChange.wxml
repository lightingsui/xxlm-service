<cu-custom bgColor="bg-gradual-pink"  isBack="{{true}}">
  <view slot="backText">返回</view>
	<view slot="content">修改密码</view>
</cu-custom>

<view class="cu-card dynamic {{isCard?'no-card':''}}">
  <view class="cu-item shadow" style="height:500rpx">

    <view class="cu-list menu-avatar">
      <view class="cu-item">
        <view class="cu-avatar round lg" style="background-image:url({{identity[0].avatar}});"></view>
        <view class="content flex-sub">
          <view>{{identity[0].name}}</view>
        </view>
      </view>
    </view>

    <view class="cu-form-group">
      <view class="title">旧密码</view>
      <input bindinput="oldPassword" value="{{oldPassword}}"></input>
    </view>

    <view class="padding-left text-red">{{oldCheck}}</view>

    <view class="cu-form-group">
      <view class="title">新密码</view>
      <input bindinput="newPassword" value="{{newPassword}}"></input>
    </view>

    <view class="padding-left text-red">{{newCheck}}</view>

    <view class="cu-form-group">
      <view class="flex justify-center" style="margin-top:30rpx">
          <button class="cu-btn bg-gradual-pink margin-tb-sm round" style="width:640rpx" bindtap="confirm">
          确定
          </button>
      </view>
    </view>

  </view>
</view>