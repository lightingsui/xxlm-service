<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">资料分享</view>
</cu-custom>

<view class="cu-card dynamic {{isCard?'no-card':''}}">
  <view class="cu-item shadow" style="height:1145rpx">

    <view class="cu-list menu-avatar">
      <view class="cu-item">
        <view class="cu-avatar round lg" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg);">
          <view class="cu-tag badge cuIcon-female bg-pink"></view>
        </view>
        <view class="content flex-sub">
          <view>{{name}}</view>
        </view>
      </view>
    </view>

    <view class="cu-form-group">
      <view class="title">标题</view>
      <input bindinput="titleInput" value="{{title}}"></input>
    </view>

    <view class="cu-form-group">
		<view class="title">类型</view>
      <picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
        <view class="picker">
          {{index?picker[index]:'请选择'}}
        </view>
      </picker>
    </view>

    <view class="cu-form-group align-start"> 
      <view class="title">描述</view>
      <textarea maxlength="-1" bindinput="textInput" value="{{text}}"  style="height:200rpx"></textarea>
    </view>

    <view class="cu-form-group align-start"> 
      <view class="title">链接</view>
      <textarea maxlength="-1" bindinput="textInput" value="{{text}}"  style="height:370rpx"></textarea>
    </view>


     <view class="cu-form-group">
      <view class="flex justify-center">
          <button class="cu-btn bg-gradual-pink  margin-tb-sm round" style="width:640rpx" bindtap="publish">
          分享
          </button>
      </view>
    </view>
    
  </view>
</view>