<view class="container-copy">
  <view class="tui-bg-box">
    <image src="../../static/images/login/bg_login.png" class="tui-bg-img"></image>
    <image src="https://api.lightingsui.com/upfile/xxlm-logo.png" class="tui-photo"></image>
    <view style="width: 100%" class="tui-login-name">信息联盟实验室</view>
  </view>
  <form bindsubmit="login">
    <view class="tui-login-from">
      <view class="tui-line-cell">
        <tui-icon name="people" size="20" color='#5677fc'></tui-icon>
        <input placeholder-class="phcolor" class="tui-input" name="username" placeholder="请输入账号" bindinput="input" maxlength="30" value="{{username}}"  />
      </view>
      <view class="tui-line-cell tui-top28">
        <tui-icon name="pwd" size="20" color='#5677fc'></tui-icon>
        <input placeholder-class="phcolor" bindinput="passwordInput" class="tui-input" name="password"  value="{{password}}"  placeholder="请输入密码" maxlength="20" type="password" />
      </view>

       

      <view style="margin-top: 80rpx">
        <button bindtap="login" style="width: 100%; height:80rpx; font-size: 18px" class="cu-btn round bg-blue shadow">登录</button>
      </view>


    </view>
  </form>



</view>

<view class="text-center">
  <view>
    <text>太原科技大学信息联盟实验室</text>
  </view>

  <text>Copyright © 2020 隋亮亮 赵如冰</text>
</view>