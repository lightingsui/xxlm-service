<cu-custom bgColor="bg-gradual-pink">
	<view slot="content">资料</view>
</cu-custom>


<view class="cu-bar search bg-white">
  <view class="search-form round">
    <text class="cuIcon-search"></text>
    <input type="text" placeholder="搜索资料" bindfocus="inputFocus" confirm-type="search" bindinput="search"></input>
  </view>
  <view class="flex" >
      <button class="cu-btn bg-gradual-pink  margin-tb-sm round" bindtap="publish" style="width:120rpx;margin-right:20rpx"> 
      分享
      </button>
  </view>
</view>

<scroll-view scroll-x class="bg-white nav" scroll-with-animation scroll-left="{{scrollLeft}}">
  <view class="cu-item {{index==TabCur?'text-green cur':''}}" wx:for="{{tabArray}}" wx:key bindtap="tabSelect" data-id="{{index}}">
    {{item.tab}}
  </view>
</scroll-view>

<view class="cu-card dynamic {{isCard?'no-card':''}} box" wx:for="{{information}}">
  <view class="cu-item shadow">    

    <view class="cu-form-group"> 
      <view class="text-black text-bold" style="font-size:30rpx">{{item.title}}</view>
    </view>

    <view class="cu-form-group align-start"> 
      <textarea maxlength="-1" bindinput="textInput" value="{{item.text}}" style="color:#888"></textarea>
    </view>

    <view class="cu-form-group align-start"> 
      <textarea maxlength="-1" bindinput="textInput" value="{{item.link}}" style="height:30rpx"></textarea>
    </view>

    <view class="cu-form-group"> 
      <view >{{item.author}}</view>
      <view class="text-gray text-df">{{item.date}}</view>
    </view>

  </view>
</view>