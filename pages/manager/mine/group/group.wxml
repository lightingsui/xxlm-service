<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">团队成员</view>
</cu-custom>

<scroll-view scroll-y class="indexes" scroll-into-view="indexes-{{listCurID}}" style="height:calc(100vh - {{CustomBar}}px)" scroll-with-animation="true" enable-back-to-top="true">
  <block wx:for="{{cityList}}" wx:key="{{index}}" wx:for-index="index">
    <view class="padding indexItem-{{list[index]}}" id="indexes-{{list[index]}}" data-index="{{list[index]}}">{{item.title}}</view>
    <view class="cu-list menu-avatar no-padding">
     
      <view class="cu-item" data-index="{{index}}" wx:for="{{item.lists}}" wx:key wx:for-index="sitem" data-sid="{{sitem}}" bindtap="member">
        
          <view class="cu-avatar round lg" style="background-image:url({{item.avatar}});">
            <view class="cu-tag badge cuIcon-{{item.gender}} bg-pink"></view>
          </view>
          <view class="content">
              <text class="text-abc">{{item.name}}</text>
          </view>
      
      </view>
    
    </view>
  </block>
</scroll-view>

<!-- 右侧索引 -->
<view class="indexBar" style="height:calc(100vh - {{CustomBar}}px - 50px)">
  <view class="indexBar-box" bindtouchstart="tStart" bindtouchend="tEnd" catchtouchmove="tMove">
    <view class="indexBar-item" wx:for="{{list}}" wx:key id="{{index}}" bindtouchstart="getCur" bindtouchend="setCur">{{list[index]}}</view>
  </view>
</view>
<!--选择显示-->
<view hidden="{{hidden}}" class="indexToast">
  {{listCur}}
</view>